<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/lv_edit_parent"
    tools:context=".Fregment.Edit_premium_lawyer_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar_edit__premium"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:indeterminateDrawable="@drawable/custom_progress"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lv_edit_pre_profile_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/iv_edit_lawyer_profile"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/my_profile"
                                    app:civ_border_color="#fff"
                                    app:civ_border_width="1dp" />

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="88dp"
                            android:layout_height="37dp"
                            android:layout_marginTop="-39dp"
                            android:background="@drawable/round_half_circle"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_edit_camera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_menu_camera"
                                android:tint="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center|start">

                        <TextView
                            android:id="@+id/tv_edit_your_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="@string/Edit_your_avatar"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_edit_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/menu_img" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="start|center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_edit_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/user_name_nm"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/edt_title_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|start"
                                android:hint="@string/user_name"
                                android:textColor="@color/black"
                                android:textColorHint="@color/edittextline"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_edit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_round_grey"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_create_white_36dp"
                                    android:tint="@color/white" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:orientation="vertical"
                            android:paddingLeft="5dp">

                            <TextView
                                android:id="@+id/tv_edit_appeal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|end"
                                android:text="@string/user_name_app"
                                android:textColor="@color/bottom_icon"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_appeal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/edittextline"
                                android:textSize="14sp"
                                android:gravity="center|start"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_edit_appeal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_round_grey"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_create_white_36dp"
                                    android:tint="@color/white" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/bottom_icon"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/lv_edit_personal_detail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/lv_round_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_create_white_36dp"
                            android:tint="@color/bottom_icon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_edit_personal_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/user_personal_Data"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start|top"
                            android:gravity="center|start|top"
                            android:text="@string/phonee"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tv_edit_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:gravity="center|start|top"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:text="@string/phone_no"
                            android:textColor="@color/edittextline"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|start|top"
                            android:hint="@string/phone_noo"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edittextline"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|top|start"
                            android:text="@string/address"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_edit_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="top|start"
                            android:text="@string/titleee"
                            android:textColor="@color/edittextline"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|start|top"
                            android:hint="@string/address_s"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edittextline"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:gravity="center|start|top"
                            android:text="@string/emaill"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_edit_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:gravity="center|end|top"
                            android:text="@string/email_static"
                            android:textColor="@color/edittextline"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|start|top"
                            android:hint="@string/emailll"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edittextline"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_site_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start|top"
                            android:gravity="center|start|top"
                            android:text="@string/site"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_edit_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start|top"
                            android:gravity="center|start|top"
                            android:text="@string/site_static"
                            android:textColor="@color/edittextline"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/edt_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|start|top"
                            android:hint="@string/siteee"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edittextline"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_mobilenuber"
                        android:gravity="center|start|top"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_countryyyy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top|start"
                            android:gravity="center|start|top"
                            android:text="@string/country"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_edit_pre_country"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start|top"
                            android:layout_marginLeft="3dp"
                            android:gravity="center|start|top"
                            android:text=""
                            android:textColor="@color/edittextline"
                            android:textSize="14sp"
                            android:visibility="gone" />


                        <Spinner
                            android:id="@+id/spinner_edit_country"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="top"
                            android:layout_marginLeft="15dp"
                            android:gravity="top"
                            android:visibility="visible"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/bottom_icon"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/lv_edit_social_media"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/lv_round_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_create_white_36dp"
                            android:tint="@color/bottom_icon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_edit_socialmedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Social_networking_accounts"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:src="@drawable/fb" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_edit_facebook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|end"
                            android:paddingRight="5dp"
                            android:text="@string/gmail"
                            android:textColor="@color/bottom_icon"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/lv_edit_fb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText

                                android:id="@+id/edt_fb_url"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end|center"
                                android:hint="@string/fb_link"
                                android:textColor="@color/black"
                                android:textColorHint="@color/edittextline"
                                android:textSize="14sp"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@mipmap/ic_instagramm"
                                android:tint="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_edit_instagram"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:gravity="center|end"
                            android:paddingRight="5dp"
                            android:text="@string/instagram"
                            android:textColor="@color/bottom_icon"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/lv_edit_insta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText

                                android:id="@+id/edt_insta_url"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end|center"
                                android:hint="@string/insta_link"
                                android:textColor="@color/black"
                                android:textColorHint="@color/edittextline"
                                android:textSize="14sp"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="3.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:src="@mipmap/ic_twitter"
                                android:tint="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_edit_twitter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:gravity="end|center"
                            android:paddingRight="5dp"
                            android:text="@string/twiter"
                            android:textColor="@color/bottom_icon"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/lv_edit_twitter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/edt_twitter_url"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end|center"
                                android:hint="@string/twitter_link"
                                android:textColor="@color/black"
                                android:textColorHint="@color/edittextline"
                                android:textSize="14sp"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/bottom_icon"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/lv_edit_lawyer_info"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/lv_round_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_create_white_36dp"
                            android:tint="@color/bottom_icon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_edit_about_lawyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/About_the_lawyer"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_user_lawyer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:visibility="visible"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_edit_user_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/user_detail"
                        android:textColor="@color/bottom_icon"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_edit_detils"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/border_lv"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_edit_user_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/enteruserdtis"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:overScrollMode="always"
                        android:padding="10dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:textColorHint="@color/edittextline"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_save_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/round_btn_corner_black"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_edit_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>